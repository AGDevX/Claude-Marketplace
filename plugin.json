{
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Write|Edit|MultiEdit|Bash",
				"hooks": [
					{
						"type": "command",
						"command": "node ${CLAUDE_PLUGIN_ROOT}/plugins/agdevx-toolkit-plugin/hooks/protect-main-branch.js",
						"timeout": 10
					}
				]
			}
		],
		"SessionStart": [
			{
				"hooks": [
					{
						"type": "command",
						"command": "node ${CLAUDE_PLUGIN_ROOT}/plugins/agdevx-toolkit-plugin/hooks/auto-load-core-skills.js",
						"timeout": 10
					}
				]
			}
		]
	}
}
